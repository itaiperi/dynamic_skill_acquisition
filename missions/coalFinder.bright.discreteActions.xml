  <AgentHandlers>
    <ObservationFromFullStats/>
    <RewardForCollectingItem>
      <Item reward="^F_R" type="coal"/>
    </RewardForCollectingItem>
    <RewardForTimeTaken initialReward="^T_R" delta="^DELTA" density="MISSION_END"/>
